{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "main": "./src/index.js",
    "scripts": {
        "build": "ncc build src/index.ts -o dist --target es2020",
        "typecheck": "tsc --noEmit",
        "dev": "tsx src/index.ts",
        "dev-watch": "tsx watch src/index.ts",
        "migrate-up": "tsx --env-file .env src/scripts/up_migrations.ts",
        "migrate-down": "tsx --env-file .env src/scripts/down_migrations.ts",
        "migrate-drop": "tsx --env-file .env src/scripts/drop_migrations.ts && tsx --env-file .env src/scripts/down_migrations.ts",
        "migrate-fresh": "pnpm run migrate-drop && pnpm run migrate-up",
        "prep": "pnpm run migrate-fresh && pnpm run seed",
        "lint": "ESLINT_USE_FLAT_CONFIG=false eslint --ext=.ts src",
        "seed": "tsx --env-file .env src/seed/seed.ts",
        "test": "vitest"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.7",
        "eslint": "^9.10.0",
        "globals": "^15.9.0",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.6.0"
    },
    "dependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/pg": "^8.11.10",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "http-status-codes": "^2.3.0",
        "jsonwebtoken": "^9.0.2",
        "kysely": "^0.27.4",
        "pg": "^8.13.0",
        "winston": "^3.14.2",
        "zod": "^3.23.8"
    }
}
